{% comment %}
  Header Section - Clean minimalist style
{% endcomment %}

<header class="site-header" data-section-id="{{ section.id }}">
  {% comment %} Top Bar with Announcement - Formula S Style {% endcomment %}
  {% if section.settings.show_announcement %}
    <div class="header-announcement">
      <div class="announcement-wrapper">
        <button class="announcement-arrow announcement-arrow--prev" aria-label="Previous">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="announcement-content">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="announcement-icon">
            <path d="M12 2L2 7l10 5 10-5-10-5z"></path>
            <path d="M2 17l10 5 10-5M2 12l10 5 10-5"></path>
          </svg>
          <span>{{ section.settings.announcement_text }}</span>
        </div>

        <button class="announcement-arrow announcement-arrow--next" aria-label="Next">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    </div>
  {% endif %}

  {% comment %} Main Header - Formula S Style {% endcomment %}
  <div class="header-main">
    <div class="page-width">
      <div class="header-layout">
        {% comment %} Logo {% endcomment %}
        <div class="header-logo">
          {% if section.settings.logo %}
            <a href="/" class="header-logo__link">
              <img
                src="{{ section.settings.logo | image_url: width: 250 }}"
                alt="{{ shop.name }}"
                class="header-logo__image"
              >
            </a>
          {% else %}
            <a href="/" class="header-logo__link header-logo__text">
              {{ shop.name }}
            </a>
          {% endif %}
        </div>

        {% comment %} Navigation - Integrated into Header {% endcomment %}
        <nav class="header-nav">
          <ul class="header-nav__list">
            {% for link in section.settings.menu.links %}
              <li class="header-nav__item {% if link.links != blank %}has-dropdown{% endif %}">
                <a href="{{ link.url }}" class="header-nav__link">
                  {{ link.title }}
                </a>

                {% if link.links != blank %}
                  <ul class="header-nav__dropdown">
                    {% for childlink in link.links %}
                      <li>
                        <a href="{{ childlink.url }}">{{ childlink.title }}</a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        </nav>

        {% comment %} Header Actions - Search, Account, Cart {% endcomment %}
        <div class="header-actions">
          <button class="header-action" aria-label="Search" id="search-toggle">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
          </button>

          <a href="{% if customer %}/account{% else %}/account/login{% endif %}" class="header-action" aria-label="Account">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </a>

          <a href="/cart" class="header-action header-cart" aria-label="Cart">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="9" cy="21" r="1"></circle>
              <circle cx="20" cy="21" r="1"></circle>
              <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
            </svg>
            {% if cart.item_count > 0 %}
              <span class="header-cart__count">{{ cart.item_count }}</span>
            {% endif %}
          </a>
        </div>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo Image",
      "info": "Upload your 3 Cat Garage logo. Recommended size: 280x70px or similar aspect ratio. PNG with transparent background works best."
    },
    {
      "type": "range",
      "id": "logo_max_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Logo Height",
      "default": 70,
      "info": "Adjust the maximum height of your logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show Announcement Bar",
      "default": true
    },
    {
      "type": "text",
      "id": "phone_number",
      "label": "Phone Number",
      "default": "(323) 123-4567"
    },
    {
      "type": "text",
      "id": "announcement_text",
      "label": "Announcement Text",
      "default": "Free shipping on orders over $50"
    },
    {
      "type": "checkbox",
      "id": "show_brands_nav",
      "label": "Show 'Shop by Brand' in Navigation",
      "default": true,
      "info": "Displays a dynamic dropdown menu with all brands from your products"
    }
  ]
}
{% endschema %}

<style>
  /* Announcement Bar - Formula S Style */
  .header-announcement {
    background: #000000;
    color: #ffffff;
    font-size: 1.3rem;
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .announcement-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
  }

  .announcement-arrow {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.7);
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .announcement-arrow:hover {
    color: #ffffff;
  }

  .announcement-content {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.3rem;
    letter-spacing: 0.02em;
  }

  .announcement-icon {
    flex-shrink: 0;
    color: #FF6B35;
  }

  /* Main Header - Formula S Pure Black */
  .site-header {
    background: #000000;
    position: sticky;
    top: 0;
    z-index: 100;
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.5);
  }

  .header-main {
    padding: 2rem 0;
  }

  .header-layout {
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .header-logo {
    display: flex;
    align-items: center;
    flex-shrink: 0;
  }

  .header-logo__link {
    text-decoration: none;
    color: #FF6B35;
    font-size: 2.4rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    display: block;
    transition: all 0.3s ease;
  }

  .header-logo__link:hover {
    opacity: 0.8;
  }

  .header-logo__image {
    max-height: {{ section.settings.logo_max_height }}px;
    width: auto;
    max-width: 100%;
    object-fit: contain;
  }

  /* Navigation - Integrated into Header */
  .header-nav {
    flex: 1;
    display: flex;
    justify-content: center;
  }

  .header-nav__list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 3.5rem;
    align-items: center;
  }

  .header-nav__item {
    position: relative;
  }

  .header-nav__link {
    display: block;
    text-decoration: none;
    color: #ffffff;
    font-size: 1.4rem;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 0.03em;
    transition: all 0.2s ease;
    padding: 0.8rem 0;
    position: relative;
  }

  .header-nav__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #FF6B35;
    transform: scaleX(0);
    transition: transform 0.3s ease;
  }

  .header-nav__link:hover {
    color: #FF6B35;
  }

  .header-nav__item:hover .header-nav__link::after,
  .header-nav__item.has-dropdown:hover .header-nav__link::after {
    transform: scaleX(1);
  }

  /* Dropdown - Formula S Style */
  .header-nav__dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #000000;
    border: 1px solid rgba(255, 255, 255, 0.15);
    min-width: 200px;
    list-style: none;
    margin: 1.5rem 0 0 0;
    padding: 0.8rem 0;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.8);
    border-radius: 0;
    z-index: 1000;
  }

  .header-nav__item:hover .header-nav__dropdown {
    opacity: 1;
    visibility: visible;
    margin-top: 0.5rem;
  }

  .header-nav__dropdown li {
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .header-nav__dropdown li:last-child {
    border-bottom: none;
  }

  .header-nav__dropdown li a {
    display: block;
    padding: 1.2rem 2.5rem;
    color: #ffffff;
    text-decoration: none;
    font-size: 1.35rem;
    font-weight: 400;
    text-transform: capitalize;
    transition: all 0.2s ease;
    letter-spacing: 0.02em;
    position: relative;
    white-space: nowrap;
  }

  .header-nav__dropdown li a::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: #FF6B35;
    transform: scaleY(0);
    transition: transform 0.2s ease;
  }

  .header-nav__dropdown li a:hover {
    background: rgba(255, 107, 53, 0.08);
    color: #FF6B35;
    padding-left: 2.8rem;
  }

  .header-nav__dropdown li a:hover::before {
    transform: scaleY(1);
  }

  /* Header Actions - Search, Account, Cart */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 2rem;
    flex-shrink: 0;
  }

  .header-action {
    background: transparent;
    border: none;
    color: #ffffff;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: color 0.2s;
    position: relative;
  }

  .header-action:hover {
    color: #FF6B35;
  }

  .header-cart__count {
    position: absolute;
    top: -6px;
    right: -6px;
    background: #FF6B35;
    color: #ffffff;
    border-radius: 50%;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1rem;
    font-weight: 700;
  }


  /* Mobile Responsive */
  @media (max-width: 1200px) {
    .header-nav__list {
      gap: 2rem;
    }

    .header-nav__link {
      font-size: 1.3rem;
    }
  }

  @media (max-width: 968px) {
    .header-layout {
      gap: 2rem;
    }

    .header-nav {
      display: none; /* Hide main nav on mobile - could add hamburger menu */
    }

    .announcement-content {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 480px) {
    .header-main {
      padding: 1.5rem 0;
    }

    .header-logo__link {
      font-size: 2rem;
    }

    .header-logo__image {
      max-height: 50px;
    }

    .header-actions {
      gap: 1.5rem;
    }

    .announcement-wrapper {
      padding: 0 1rem;
    }
  }
</style>
