{% comment %}
  Footer Section
{% endcomment %}

<footer class="site-footer" data-section-id="{{ section.id }}">
  <div class="footer-container page-width">
    <div class="footer-layout">
      {% comment %} About Column {% endcomment %}
      <div class="footer-column">
        <h3 class="footer-column__title">{{ section.settings.column_1_title }}</h3>
        <div class="footer-column__content">
          {{ section.settings.column_1_content }}
        </div>
      </div>

      {% comment %} Quick Links Column {% endcomment %}
      <div class="footer-column">
        <h3 class="footer-column__title">{{ section.settings.column_2_title }}</h3>
        <ul class="footer-links">
          {% for link in section.settings.menu_1.links %}
            <li>
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      {% comment %} Customer Service Column {% endcomment %}
      <div class="footer-column">
        <h3 class="footer-column__title">{{ section.settings.column_3_title }}</h3>
        <ul class="footer-links">
          {% for link in section.settings.menu_2.links %}
            <li>
              <a href="{{ link.url }}" class="footer-link">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      {% comment %} Contact Column {% endcomment %}
      <div class="footer-column">
        <h3 class="footer-column__title">Contact Us</h3>
        <div class="footer-contact">
          {% if section.settings.phone %}
            <p>Phone: {{ section.settings.phone }}</p>
          {% endif %}
          {% if section.settings.email %}
            <p>Email: {{ section.settings.email }}</p>
          {% endif %}
          {% if section.settings.address %}
            <p>{{ section.settings.address }}</p>
          {% endif %}
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="footer-copyright">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      </p>

      <div class="footer-payment-icons">
        {% if section.settings.show_payment_icons %}
          <span class="footer-payment-text">We Accept:</span>
          <svg width="38" height="24" viewBox="0 0 38 24" fill="none">
            <rect width="38" height="24" rx="4" fill="#1434CB"/>
            <text x="50%" y="50%" text-anchor="middle" dy=".3em" fill="white" font-size="10" font-weight="bold">VISA</text>
          </svg>
          <svg width="38" height="24" viewBox="0 0 38 24" fill="none">
            <rect width="38" height="24" rx="4" fill="#EB001B"/>
            <circle cx="14" cy="12" r="8" fill="#FF5F00"/>
            <circle cx="24" cy="12" r="8" fill="#F79E1B"/>
          </svg>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "column_1_title",
      "label": "Column 1 Title",
      "default": "About Us"
    },
    {
      "type": "richtext",
      "id": "column_1_content",
      "label": "Column 1 Content",
      "default": "<p>Your trusted source for quality car parts.</p>"
    },
    {
      "type": "text",
      "id": "column_2_title",
      "label": "Column 2 Title",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "column_3_title",
      "label": "Column 3 Title",
      "default": "Customer Service"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "text",
      "id": "phone",
      "label": "Phone Number"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email Address"
    },
    {
      "type": "textarea",
      "id": "address",
      "label": "Address"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show Payment Icons",
      "default": true
    }
  ]
}
{% endschema %}

<style>
  .site-footer {
    background: #000000;
    color: #e8e8e8;
    padding: 6rem 0 2rem;
    margin-top: 0;
    border-top: 1px solid #2a2a2a;
  }

  .footer-layout {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 4rem;
    margin-bottom: 4rem;
  }

  .footer-column__title {
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    color: white;
  }

  .footer-column__content {
    font-size: 1.5rem;
    line-height: 1.6;
    color: #d1d5db;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 1rem;
  }

  .footer-link {
    color: #d1d5db;
    text-decoration: none;
    font-size: 1.5rem;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: white;
  }

  .footer-contact {
    font-size: 1.5rem;
    color: #d1d5db;
  }

  .footer-contact p {
    margin: 0.5rem 0;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 3rem;
    border-top: 1px solid #374151;
  }

  .footer-copyright {
    font-size: 1.4rem;
    color: #9ca3af;
    margin: 0;
  }

  .footer-payment-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-payment-text {
    font-size: 1.4rem;
    color: #9ca3af;
  }

  @media (max-width: 768px) {
    .footer-bottom {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }
  }
</style>
