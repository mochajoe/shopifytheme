{% comment %}
  Shop by Vehicle Section
  Elegant vehicle collection showcase
{% endcomment %}

<section class="vehicle-collections" data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <div class="vehicle-collections__header">
        <h2 class="vehicle-collections__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="vehicle-collections__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="vehicle-grid">
      {% for block in section.blocks %}
        {% if block.type == 'vehicle' %}
          <a
            href="{{ block.settings.collection_url }}"
            class="vehicle-card"
            {{ block.shopify_attributes }}
          >
            <div class="vehicle-card__image-wrapper">
              {% if block.settings.vehicle_image != blank %}
                <img
                  src="{{ block.settings.vehicle_image | image_url: width: 800 }}"
                  alt="{{ block.settings.vehicle_name }}"
                  loading="lazy"
                  class="vehicle-card__image"
                >
              {% else %}
                <div class="vehicle-card__image vehicle-card__image--placeholder"></div>
              {% endif %}
              <div class="vehicle-card__overlay"></div>
            </div>

            <div class="vehicle-card__content">
              <h3 class="vehicle-card__name">{{ block.settings.vehicle_name }}</h3>
              {% if block.settings.vehicle_subtitle != blank %}
                <p class="vehicle-card__subtitle">{{ block.settings.vehicle_subtitle }}</p>
              {% endif %}
              <span class="vehicle-card__cta">
                Shop Parts
                <svg class="vehicle-card__arrow" width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                </svg>
              </span>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop by Vehicle",
  "tag": "section",
  "class": "section-vehicle-collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Vehicle"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Find parts for your specific vehicle"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 8,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 80
    }
  ],
  "blocks": [
    {
      "type": "vehicle",
      "name": "Vehicle",
      "settings": [
        {
          "type": "text",
          "id": "vehicle_name",
          "label": "Vehicle Name",
          "default": "Honda S2000"
        },
        {
          "type": "text",
          "id": "vehicle_subtitle",
          "label": "Vehicle Subtitle",
          "default": "1999-2009"
        },
        {
          "type": "image_picker",
          "id": "vehicle_image",
          "label": "Vehicle Image",
          "info": "Recommended: 800x600px or larger"
        },
        {
          "type": "url",
          "id": "collection_url",
          "label": "Collection URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Vehicle",
      "blocks": [
        {
          "type": "vehicle",
          "settings": {
            "vehicle_name": "Honda S2000",
            "vehicle_subtitle": "1999-2009 | F20C, F22C"
          }
        },
        {
          "type": "vehicle",
          "settings": {
            "vehicle_name": "Nissan Skyline GT-R",
            "vehicle_subtitle": "R32, R33, R34 | RB26DETT"
          }
        },
        {
          "type": "vehicle",
          "settings": {
            "vehicle_name": "Honda Civic",
            "vehicle_subtitle": "EG, EK, EP3 | B-Series, K-Series"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  .vehicle-collections {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background: #0a0a0a;
    position: relative;
  }

  .vehicle-collections::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.3), transparent);
  }

  .vehicle-collections__header {
    text-align: center;
    margin-bottom: 6rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .vehicle-collections__heading {
    font-size: 4.2rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    color: #e8e8e8;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    position: relative;
    display: inline-block;
  }

  .vehicle-collections__heading::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, transparent, var(--color-primary, #D4AF37), transparent);
    box-shadow: 0 0 10px rgba(212, 175, 55, 0.5);
  }

  .vehicle-collections__subheading {
    font-size: 1.8rem;
    color: #999;
    margin: 2rem 0 0;
    line-height: 1.6;
  }

  .vehicle-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 3rem;
  }

  .vehicle-card {
    position: relative;
    text-decoration: none;
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    min-height: 400px;
  }

  .vehicle-card:hover {
    border-color: var(--color-primary, #D4AF37);
    box-shadow:
      0 0 40px rgba(212, 175, 55, 0.3),
      0 20px 40px rgba(0, 0, 0, 0.5);
    transform: translateY(-8px);
  }

  .vehicle-card__image-wrapper {
    position: relative;
    width: 100%;
    height: 280px;
    overflow: hidden;
  }

  .vehicle-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .vehicle-card:hover .vehicle-card__image {
    transform: scale(1.1);
  }

  .vehicle-card__image--placeholder {
    background: linear-gradient(135deg, #0a0a0a, #1a1a1a);
    display: flex;
    align-items: center;
    justify-content: center;
    color: #444;
    font-size: 1.4rem;
  }

  .vehicle-card__image--placeholder::after {
    content: 'No Image';
  }

  .vehicle-card__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(10, 10, 10, 0.9) 100%
    );
    transition: opacity 0.4s ease;
  }

  .vehicle-card:hover .vehicle-card__overlay {
    opacity: 0.7;
  }

  .vehicle-card__content {
    padding: 3rem 2.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
    background: linear-gradient(180deg, #1a1a1a, #151515);
  }

  .vehicle-card__name {
    font-size: 2.4rem;
    font-weight: 700;
    margin: 0 0 0.8rem 0;
    color: #e8e8e8;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: color 0.3s ease;
  }

  .vehicle-card:hover .vehicle-card__name {
    color: var(--color-primary, #D4AF37);
    text-shadow: 0 0 20px rgba(212, 175, 55, 0.4);
  }

  .vehicle-card__subtitle {
    font-size: 1.4rem;
    color: #888;
    margin: 0 0 2rem 0;
    letter-spacing: 0.05em;
  }

  .vehicle-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-primary, #D4AF37);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: auto;
    transition: all 0.3s ease;
  }

  .vehicle-card__arrow {
    transition: transform 0.3s ease;
  }

  .vehicle-card:hover .vehicle-card__arrow {
    transform: translateX(5px);
  }

  @media (max-width: 1024px) {
    .vehicle-grid {
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2.5rem;
    }

    .vehicle-collections__heading {
      font-size: 3.6rem;
    }
  }

  @media (max-width: 768px) {
    .vehicle-collections {
      padding-top: 60px;
      padding-bottom: 60px;
    }

    .vehicle-collections__header {
      margin-bottom: 4rem;
    }

    .vehicle-collections__heading {
      font-size: 2.8rem;
    }

    .vehicle-collections__subheading {
      font-size: 1.6rem;
    }

    .vehicle-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .vehicle-card {
      min-height: 350px;
    }

    .vehicle-card__image-wrapper {
      height: 220px;
    }

    .vehicle-card__content {
      padding: 2rem 1.8rem;
    }

    .vehicle-card__name {
      font-size: 2rem;
    }
  }
</style>
