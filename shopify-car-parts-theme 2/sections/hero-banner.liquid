{% comment %}
  Hero Banner Section - Formula S Style
  Full-width premium automotive banner
{% endcomment %}

<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__slide">
    {% if section.settings.image != blank %}
      <div class="hero-banner__media">
        <img
          src="{{ section.settings.image | image_url: width: 2400 }}"
          srcset="{{ section.settings.image | image_url: width: 1200 }} 1200w,
                  {{ section.settings.image | image_url: width: 1800 }} 1800w,
                  {{ section.settings.image | image_url: width: 2400 }} 2400w"
          sizes="100vw"
          alt="{{ section.settings.heading | escape }}"
          loading="eager"
          class="hero-banner__image"
        >
        <div class="hero-banner__overlay"></div>
      </div>
    {% endif %}

    <div class="hero-banner__content-wrapper">
      <div class="hero-banner__content">
        {% if section.settings.heading != blank %}
          <h1 class="hero-banner__heading">{{ section.settings.heading }}</h1>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="hero-banner__subheading">{{ section.settings.subheading }}</p>
        {% endif %}

        {% if section.settings.button_text != blank %}
          <a href="{{ section.settings.button_url }}" class="hero-banner__cta">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Banner Image",
      "info": "Recommended: 2400x900px high-quality image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Premium Performance Parts"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "High-quality aftermarket parts"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Banner Height",
      "options": [
        {
          "value": "medium",
          "label": "Medium (600px)"
        },
        {
          "value": "large",
          "label": "Large (700px)"
        },
        {
          "value": "xlarge",
          "label": "Extra Large (800px)"
        }
      ],
      "default": "large"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Image Overlay Darkness",
      "default": 40,
      "info": "Darken image for better text readability"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}

<style>
  /* Formula S Style Hero Banner */
  .hero-banner {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
    background: #000;
  }

  .hero-banner__slide {
    position: relative;
    width: 100%;
    {% if section.settings.height == 'medium' %}
      height: 600px;
    {% elsif section.settings.height == 'xlarge' %}
      height: 800px;
    {% else %}
      height: 700px;
    {% endif %}
    overflow: hidden;
  }

  /* Full-width Image Container */
  .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Clean Dark Overlay */
  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  /* Content Container */
  .hero-banner__content-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
    z-index: 3;
    padding: 4rem 6rem;
  }

  .hero-banner__content {
    max-width: 800px;
    text-align: {{ section.settings.text_alignment }};
  }

  /* Bold, Clean Typography */
  .hero-banner__heading {
    font-size: 7rem;
    font-weight: 800;
    line-height: 1.1;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0 0 1.5rem 0;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .hero-banner__subheading {
    font-size: 2rem;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 3rem 0;
    letter-spacing: 0.02em;
  }

  /* Formula S Style Button */
  .hero-banner__cta {
    display: inline-block;
    padding: 1.6rem 4rem;
    background: #ffffff;
    color: #000000;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 1.4rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    border-radius: 0;
    border: 2px solid #ffffff;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__cta:hover {
    background: transparent;
    color: #ffffff;
    border-color: #ffffff;
    box-shadow: 0 6px 25px rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .hero-banner__content-wrapper {
      padding: 4rem;
    }

    .hero-banner__heading {
      font-size: 5.5rem;
    }

    .hero-banner__subheading {
      font-size: 1.8rem;
    }
  }

  @media (max-width: 768px) {
    .hero-banner__slide {
      height: 500px;
    }

    .hero-banner__content-wrapper {
      padding: 3rem 2rem;
    }

    .hero-banner__heading {
      font-size: 4rem;
    }

    .hero-banner__subheading {
      font-size: 1.6rem;
      margin-bottom: 2.5rem;
    }

    .hero-banner__cta {
      padding: 1.4rem 3rem;
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-banner__slide {
      height: 400px;
    }

    .hero-banner__content-wrapper {
      padding: 2rem 1.5rem;
    }

    .hero-banner__heading {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .hero-banner__subheading {
      font-size: 1.4rem;
      margin-bottom: 2rem;
    }

    .hero-banner__cta {
      padding: 1.2rem 2.5rem;
      font-size: 1.2rem;
    }
  }
</style>
