{% comment %}
  Brand Showcase Section
  Display featured brands in a grid layout
{% endcomment %}

<section class="brand-showcase" data-section-id="{{ section.id }}">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="brand-showcase__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="brand-grid">
      {% for block in section.blocks %}
        {% if block.type == 'brand' %}
          <a
            href="{{ block.settings.brand_url }}"
            class="brand-item"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.brand_logo != blank %}
              <img
                src="{{ block.settings.brand_logo | image_url: width: 200 }}"
                alt="{{ block.settings.brand_name }}"
                loading="lazy"
                class="brand-logo"
              >
            {% else %}
              <span class="brand-name">{{ block.settings.brand_name }}</span>
            {% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_all_brands_link %}
      <div class="brand-showcase__cta">
        <a href="{{ section.settings.all_brands_url }}" class="button button--secondary">
          {{ section.settings.all_brands_text }}
        </a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Brand Showcase",
  "tag": "section",
  "class": "section-brand-showcase",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop by Brand"
    },
    {
      "type": "checkbox",
      "id": "show_all_brands_link",
      "label": "Show 'View All Brands' Link",
      "default": true
    },
    {
      "type": "text",
      "id": "all_brands_text",
      "label": "All Brands Button Text",
      "default": "Shop All Brands"
    },
    {
      "type": "url",
      "id": "all_brands_url",
      "label": "All Brands URL",
      "default": "/collections/all"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name",
          "default": "Brand Name"
        },
        {
          "type": "image_picker",
          "id": "brand_logo",
          "label": "Brand Logo"
        },
        {
          "type": "url",
          "id": "brand_url",
          "label": "Brand Collection URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Showcase",
      "blocks": [
        {
