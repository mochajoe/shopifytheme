{% comment %}
  Hero Banner Section - Formula S Style with Multiple Slides
  Full-width premium automotive banner with carousel
{% endcomment %}

<section class="hero-banner" data-section-id="{{ section.id }}">
  <div class="hero-banner__container">
    {% for block in section.blocks %}
      <div class="hero-banner__slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <div class="hero-banner__media">
            <img
              src="{{ block.settings.image | image_url: width: 2400 }}"
              srcset="{{ block.settings.image | image_url: width: 1200 }} 1200w,
                      {{ block.settings.image | image_url: width: 1800 }} 1800w,
                      {{ block.settings.image | image_url: width: 2400 }} 2400w"
              sizes="100vw"
              alt="{{ block.settings.heading | escape }}"
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              class="hero-banner__image"
            >
            <div class="hero-banner__overlay"></div>
          </div>
        {% endif %}

        <div class="hero-banner__content-wrapper">
          <div class="hero-banner__content">
            {% if block.settings.heading != blank %}
              <h1 class="hero-banner__heading">{{ block.settings.heading }}</h1>
            {% endif %}

            {% if block.settings.subheading != blank %}
              <p class="hero-banner__subheading">{{ block.settings.subheading }}</p>
            {% endif %}

            {% if block.settings.button_text != blank %}
              <a href="{{ block.settings.button_url }}" class="hero-banner__cta">
                {{ block.settings.button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}

    {% if section.blocks.size > 1 %}
      {% comment %} Carousel Navigation Arrows {% endcomment %}
      <button class="hero-banner__arrow hero-banner__arrow--prev" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="hero-banner__arrow hero-banner__arrow--next" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>

      {% comment %} Carousel Indicators {% endcomment %}
      <div class="hero-banner__indicators">
        {% for block in section.blocks %}
          <button class="hero-banner__indicator {% if forloop.first %}active{% endif %}" data-slide="{{ forloop.index0 }}" aria-label="Slide {{ forloop.index }}"></button>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "tag": "section",
  "class": "section-hero-banner",
  "settings": [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text Alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "height",
      "label": "Banner Height",
      "options": [
        {
          "value": "medium",
          "label": "Medium (600px)"
        },
        {
          "value": "large",
          "label": "Large (700px)"
        },
        {
          "value": "xlarge",
          "label": "Extra Large (800px)"
        }
      ],
      "default": "large"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Image Overlay Darkness",
      "default": 40,
      "info": "Darken image for better text readability"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "s",
      "label": "Autoplay Speed",
      "default": 5,
      "info": "Set to 0 to disable autoplay"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image",
          "info": "Recommended: 2400x900px high-quality image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Premium Performance Parts"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "High-quality aftermarket parts"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",
          "default": "SHOP NOW"
        },
        {
          "type": "url",
          "id": "button_url",
          "label": "Button URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner",
      "blocks": [
        {
          "type": "slide",
          "settings": {
            "heading": "Premium Performance Parts",
            "subheading": "High-quality aftermarket parts",
            "button_text": "SHOP NOW"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
  /* Formula S Style Hero Banner */
  .hero-banner {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
    background: #000;
  }

  .hero-banner__container {
    position: relative;
    width: 100%;
    {% if section.settings.height == 'medium' %}
      height: 600px;
    {% elsif section.settings.height == 'xlarge' %}
      height: 800px;
    {% else %}
      height: 700px;
    {% endif %}
    overflow: hidden;
  }

  .hero-banner__slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }

  .hero-banner__slide.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  /* Full-width Image Container */
  .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .hero-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  /* Clean Dark Overlay */
  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  /* Content Container */
  .hero-banner__content-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: {{ section.settings.text_alignment }};
    z-index: 3;
    padding: 4rem 6rem;
  }

  .hero-banner__content {
    max-width: 800px;
    text-align: {{ section.settings.text_alignment }};
  }

  /* Bold, Clean Typography */
  .hero-banner__heading {
    font-size: 7rem;
    font-weight: 800;
    line-height: 1.1;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin: 0 0 1.5rem 0;
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  }

  .hero-banner__subheading {
    font-size: 2rem;
    font-weight: 400;
    line-height: 1.5;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 3rem 0;
    letter-spacing: 0.02em;
  }

  /* Formula S Style Button - Rounded White */
  .hero-banner__cta {
    display: inline-block;
    padding: 1.4rem 4rem;
    background: #ffffff;
    color: #000000;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 1.3rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    border-radius: 50px;
    border: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .hero-banner__cta:hover {
    background: #FF6B35;
    color: #ffffff;
    box-shadow: 0 6px 30px rgba(255, 107, 53, 0.4);
    transform: translateY(-2px);
  }

  /* Carousel Navigation Arrows */
  .hero-banner__arrow {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    border: none;
    color: #ffffff;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 4;
    backdrop-filter: blur(5px);
  }

  .hero-banner__arrow:hover {
    background: rgba(255, 107, 53, 0.9);
  }

  .hero-banner__arrow--prev {
    left: 2rem;
  }

  .hero-banner__arrow--next {
    right: 2rem;
  }

  /* Carousel Indicators - Formula S Style Dots */
  .hero-banner__indicators {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    z-index: 4;
  }

  .hero-banner__indicator {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .hero-banner__indicator:hover,
  .hero-banner__indicator.active {
    background: #ffffff;
    transform: scale(1.2);
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .hero-banner__content-wrapper {
      padding: 4rem;
    }

    .hero-banner__heading {
      font-size: 5.5rem;
    }

    .hero-banner__subheading {
      font-size: 1.8rem;
    }
  }

  @media (max-width: 768px) {
    .hero-banner__container {
      height: 500px;
    }

    .hero-banner__content-wrapper {
      padding: 3rem 2rem;
    }

    .hero-banner__heading {
      font-size: 4rem;
    }

    .hero-banner__subheading {
      font-size: 1.6rem;
      margin-bottom: 2.5rem;
    }

    .hero-banner__cta {
      padding: 1.4rem 3rem;
      font-size: 1.3rem;
    }
  }

  @media (max-width: 480px) {
    .hero-banner__container {
      height: 400px;
    }

    .hero-banner__content-wrapper {
      padding: 2rem 1.5rem;
    }

    .hero-banner__heading {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .hero-banner__subheading {
      font-size: 1.4rem;
      margin-bottom: 2rem;
    }

    .hero-banner__cta {
      padding: 1.2rem 2.5rem;
      font-size: 1.2rem;
    }

    .hero-banner__arrow {
      display: none;
    }

    .hero-banner__indicators {
      bottom: 2rem;
    }
  }
</style>

<script>
  (function() {
    const container = document.querySelector('[data-section-id="{{ section.id }}"] .hero-banner__container');
    if (!container) return;

    const slides = container.querySelectorAll('.hero-banner__slide');
    const indicators = container.querySelectorAll('.hero-banner__indicator');
    const prevButton = container.querySelector('.hero-banner__arrow--prev');
    const nextButton = container.querySelector('.hero-banner__arrow--next');

    let currentSlide = 0;
    let autoplayInterval;
    const autoplaySpeed = {{ section.settings.autoplay_speed | times: 1000 }};

    function goToSlide(index) {
      slides[currentSlide].classList.remove('active');
      indicators[currentSlide]?.classList.remove('active');

      currentSlide = index;
      if (currentSlide >= slides.length) currentSlide = 0;
      if (currentSlide < 0) currentSlide = slides.length - 1;

      slides[currentSlide].classList.add('active');
      indicators[currentSlide]?.classList.add('active');
    }

    function nextSlide() {
      goToSlide(currentSlide + 1);
    }

    function prevSlide() {
      goToSlide(currentSlide - 1);
    }

    function startAutoplay() {
      if (autoplaySpeed > 0 && slides.length > 1) {
        autoplayInterval = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
      }
    }

    // Event listeners
    prevButton?.addEventListener('click', function() {
      prevSlide();
      stopAutoplay();
      startAutoplay();
    });

    nextButton?.addEventListener('click', function() {
      nextSlide();
      stopAutoplay();
      startAutoplay();
    });

    indicators.forEach(function(indicator, index) {
      indicator.addEventListener('click', function() {
        goToSlide(index);
        stopAutoplay();
        startAutoplay();
      });
    });

    // Pause on hover
    container.addEventListener('mouseenter', stopAutoplay);
    container.addEventListener('mouseleave', startAutoplay);

    // Start autoplay
    startAutoplay();
  })();
</script>
